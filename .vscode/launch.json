            "visualizerFile": "${workspaceFolder}/scripts/Lython.natvis",
            "showDisplayString": true,
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
